/* Algemene stijl */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f8f8f8;
}

/* Header */
header {
    text-align: center;
    background-color: #2e8b57;
    color: white;
    padding: 20px;
}

/* Receptengrid */
.recipe-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    padding: 20px;
}

/* Individuele recepttegels */
.recipe-tile {
    width: 220px;
    text-align: center;
    background-color: white;
    padding: 10px;
    border-radius: 8px;
    border: 2px solid #2e8b57;
    transition: transform 0.2s;
}

.recipe-tile:hover {
    transform: scale(1.05);
}

/* Afbeeldingen in tegels */
.recipe-tile img {
    width: 200px;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
    display: block;
    margin: 0 auto;
}

/* Sidebar-stijl */
.left-sidebar, .right-sidebar {
    flex: 1;
    padding: 20px;
    background-color: #d9f2e6;
    margin-right: 10px;
    border-radius: 8px;
}
